CC = g++
CCOPT = -Wall -c
LINK = g++
LINKOPT =
PACKA = ar
PARCAOPT = rc
DOLINK = $(LINK) $(LINKOPT) -o $@ $^
SOURCES := $(wildcard *.cpp)
OBJS := $(patsubst %.cpp,%.o,$(SOURCES))

CMDIR = ./cppcommon/
CMLIB = $(CMDIR)cmlib.a

LIBDIR = 
LIBDB =  
LIBDBOPT = 
CMDIR = 
CMLIB = 


# remove the objs after compilation
.INTERMEDIATE: 
.PHONY: clean

# This is a suffix rule 
#.c.o: 
%.o: %.cpp
	$(CC) $(CCOPT) $<

# Main Targets
all: main


